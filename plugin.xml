        <source-file src="src/net/gotev/uploadservice/MultipartUploadRequest.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/MultipartUploadTask.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/NameValue.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/Placeholders.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/ServerResponse.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadFile.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadInfo.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadNotificationAction.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadNotificationConfig.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadNotificationStatusConfig.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadRequest.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadService.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadServiceBroadcastReceiver.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadServiceSingleBroadcastReceiver.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadStatusDelegate.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadTask.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/UploadTaskParameters.java" target-dir="src/net/gotev/uploadservice" />
    </platform>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="FileTransferBackground">
                <param name="ios-package" value="FileTransferBackground" />
            </feature>
        </config-file>
        <header-file src="src/ios/AppDelegate+upload.h" />
        <source-file src="src/ios/AppDelegate+upload.m" />
         <header-file src="src/ios/FileTransferBackground.h" />
        <source-file src="src/ios/FileTransferBackground.m" />
         <header-file src="src/ios/FileUploadManager.h" />
        <source-file src="src/ios/FileUploadManager.m" />
    </platform>
</plugin>
