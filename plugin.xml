        <source-file src="src/net/gotev/uploadservice/okhttp/OkHttpBodyWriter.java" target-dir="src/net/gotev/uploadservice/okhttp" />
        <source-file src="src/net/gotev/uploadservice/okhttp/OkHttpStack.java" target-dir="src/net/gotev/uploadservice/okhttp" />
        <source-file src="src/net/gotev/uploadservice/okhttp/OkHttpStackConnection.java" target-dir="src/net/gotev/uploadservice/okhttp" />

        <source-file src="src/net/gotev/uploadservice/schemehandlers/ContentSchemeHandler.java" target-dir="src/net/gotev/uploadservice/schemehandlers" />
        <source-file src="src/net/gotev/uploadservice/schemehandlers/FileSchemeHandler.java" target-dir="src/net/gotev/uploadservice/schemehandlers" />
        <source-file src="src/net/gotev/uploadservice/schemehandlers/SchemeHandler.java" target-dir="src/net/gotev/uploadservice/schemehandlers" />
        <source-file src="src/net/gotev/uploadservice/schemehandlers/SchemeHandlerFactory.java" target-dir="src/net/gotev/uploadservice/schemehandlers" />

        <source-file src="src/net/gotev/uploadservice/BinaryUploadRequest.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/BinaryUploadTask.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/BroadcastData.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/ContentType.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/DefaultLoggerDelegate.java" target-dir="src/net/gotev/uploadservice" />
        <source-file src="src/net/gotev/uploadservice/HttpUploadRequest.java" target-dir="src/net/gotev/uploadservice" />
