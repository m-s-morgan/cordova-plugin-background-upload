<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="cordova-plugin-background-upload" version="1.1.0">
    <name>Cordova Background Upload Plugin</name>
    <description>Background Upload plugin for Cordova</description>
    <license>ISC</license>
    <keywords>cordova,background,file,download</keywords>
    <js-module src="www/FileTransferManager.js" name="FileTransferManager">
        <clobbers target="FileTransferManager" />
    </js-module>
    <platform name="android">
        <framework src="com.squareup.okhttp3:okhttp:4.10.0" />
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FileTransferBackground">
                <param name="android-package" value="com.spoon.backgroundFileUpload.FileTransferBackground" />
            </feature>
			<feature name="NetworkMonitor">
                <param name="android-package" value="com.spoon.backgroundFileUpload.NetworkMonitor" />
            </feature>
			<feature name="UploadState">
                <param name="android-package" value="com.spoon.backgroundFileUpload.UploadState" />
            </feature>
			<feature name="FileTransferSettings">
                <param name="android-package" value="com.spoon.backgroundFileUpload.FileTransferSettings" />
            </feature>
			<feature name="ConnectionStatusListener">
                <param name="android-package" value="com.spoon.backgroundFileUpload.ConnectionStatusListener" />
            </feature>
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <service android:name="net.gotev.uploadservice.UploadService" android:foregroundServiceType="mediaProjection" />
        </config-file>
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
            <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
            <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
            <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
        </config-file>
        <source-file src="src/android/FileTransferBackground.java" target-dir="src/com/spoon/backgroundFileUpload" />
		<source-file src="src/android/NetworkMonitor.java" target-dir="src/com/spoon/backgroundFileUpload" />
		<source-file src="src/android/UploadState.java" target-dir="src/com/spoon/backgroundFileUpload" />
		<source-file src="src/android/FileTransferSettings.java" target-dir="src/com/spoon/backgroundFileUpload" />
		<source-file src="src/android/ConnectionStatusListener.java" target-dir="src/com/spoon/backgroundFileUpload" />

        <source-file src="src/com/snatik/storage/helpers/ImmutablePair.java" target-dir="src/com/snatik/storage/helpers" />
        <source-file src="src/com/snatik/storage/helpers/OrderType.java" target-dir="src/com/snatik/storage/helpers" />
        <source-file src="src/com/snatik/storage/helpers/SizeUnit.java" target-dir="src/com/snatik/storage/helpers" />

        <source-file src="src/com/snatik/storage/security/CipherAlgorithmType.java" target-dir="src/com/snatik/storage/security" />
        <source-file src="src/com/snatik/storage/security/CipherModeType.java" target-dir="src/com/snatik/storage/security" />
        <source-file src="src/com/snatik/storage/security/CipherPaddingType.java" target-dir="src/com/snatik/storage/security" />
        <source-file src="src/com/snatik/storage/security/CipherTransformationType.java" target-dir="src/com/snatik/storage/security" />
        <source-file src="src/com/snatik/storage/security/SecurityUtil.java" target-dir="src/com/snatik/storage/security" />

        <source-file src="src/com/snatik/storage/AbstractDiskStorage.java" target-dir="src/com/snatik/storage" />
        <source-file src="src/com/snatik/storage/ExternalStorage.java" target-dir="src/com/snatik/storage" />
        <source-file src="src/com/snatik/storage/InternalStorage.java" target-dir="src/com/snatik/storage" />
        <source-file src="src/com/snatik/storage/SimpleStorage.java" target-dir="src/com/snatik/storage" />
        <source-file src="src/com/snatik/storage/SimpleStorageConfiguration.java" target-dir="src/com/snatik/storage" />
        <source-file src="src/com/snatik/storage/Storable.java" target-dir="src/com/snatik/storage" />
        <source-file src="src/com/snatik/storage/Storage.java" target-dir="src/com/snatik/storage" />

        <source-file src="src/net/gotev/uploadservice/http/impl/HurlBodyWriter.java" target-dir="src/net/gotev/uploadservice/http/impl" />
        <source-file src="src/net/gotev/uploadservice/http/impl/HurlStack.java" target-dir="src/net/gotev/uploadservice/http/impl" />
        <source-file src="src/net/gotev/uploadservice/http/impl/HurlStackConnection.java" target-dir="src/net/gotev/uploadservice/http/impl" />

        <source-file src="src/net/gotev/uploadservice/http/BodyWriter.java" target-dir="src/net/gotev/uploadservice/http" />
        <source-file src="src/net/gotev/uploadservice/http/HttpConnection.java" target-dir="src/net/gotev/uploadservice/http" />
